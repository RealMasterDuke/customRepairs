<div class="row">
  <!--<p id="notice"><%= notice %></p>-->

  <div class="span9">
    <%= image_tag @product.image_url(:thumb) if @product.image.present? %>
  </div>

  <div class="span9">
    <%= @product.title %>
  </div>

  <div class="span9">
    <%= @product.text %>
  </div>

  <div class="span9">
    <%= @product.price %>
  </div>

</div>

<h2>Comments</h2>
<% @product.comments.each do |comment| %>
    <p>
      <strong>Name:</strong>
      <%= comment.name %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
    <hr/>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <div class="field">
      <%= f.hidden_field :product_id %>
    </div>
    <p>
      <%= f.submit %>
    </p>
<% end %>


<div class="span2">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', category_path(@product.category_id) %>

</div>
