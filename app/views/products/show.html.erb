<div class="row">
  <!--<p id="notice"><%= notice %></p>-->

  <div class="span9">
    <%= image_tag @product.image_url(:thumb) if @product.image.present? %>
  </div>

  <div class="span9">
    <%= @product.title %>
  </div>

  <div class="span9">
    <%= @product.text %>
  </div>

  <div class="span9">
    <%= @product.price %>
  </div>

</div>

<div class="span2">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', category_path(@product.category_id) %>

</div>