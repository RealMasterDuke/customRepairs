<% if current_user.try(:admin?) %>
    <div class="row">
      <p id="notice"><%= notice %></p>

      <div class="span9">
        <%= @category.title %>
      </div>

      <% @category.products.each do |product| %>
          <div class="span2">
            <%= image_tag product.image_url(:thumb) if product.image.present? %>
            <h3><%= product.title %></h3>

            <p>
              <%= truncate(product.text, length: 80, omission: "...") %>
            </p>

            <p>
              <%= link_to 'View Details', product, :class => "btn btn-default" %>
            </p>

            <%= form_tag(line_items_path, :method => "post") do %>
                <%= hidden_field_tag(:product_id, product.id) %>
                <%= submit_tag("Add to Cart") %>
            <% end %>
          </div>
      <% end %>

    </div>




    <div class="span2">
      <h2>Add a Product:</h2>
      <%= form_for([@category, @category.products.build]) do |f| %>
          <div class="field">
            <%= f.label :title %>
            <br>
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <%= f.label :text %>
            <br>
            <%= f.text_area :text %>
          </div>
          <div class="field">
            <%= f.hidden_field :category_id %>
          </div>
          <div class="field">
            <%= f.label :image %>
            <br>
            <%= f.file_field :image %>
          </div>
          <p>
            <%= f.submit %>
          </p>
      <% end %>
    </div>

    <div class="span2">
      <%= link_to 'Edit', edit_category_path(@category) %> |
      <%= link_to 'Back', categories_path %>

    </div>
<% else %>
    <div class="row">
      <p id="notice"><%= notice %></p>

      <div class="span9">
        <%= @category.title %>
      </div>

      <% @category.products.each do |product| %>
          <div class="span2">
            <%= image_tag product.image_url(:thumb) if product.image.present? %>
            <h3><%= product.title %></h3>

            <p>
              <%= truncate(product.text, length: 80, omission: "...") %>
            </p>

            <p>
              <%= link_to 'View Details', product, :class => "btn btn-default" %>
            </p>
            <%= form_tag(line_items_path, :method => "post") do %>
                <%= hidden_field_tag(:product_id, product.id) %>
                <%= submit_tag("Add to Cart") %>
            <% end %>
      </div>
<% end %>
</div>

<div class="span2">
  <%= link_to 'Back', categories_path %>
</div>
<% end %>


